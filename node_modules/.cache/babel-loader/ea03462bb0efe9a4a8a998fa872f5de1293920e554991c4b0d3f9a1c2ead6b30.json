ngth\" class=\"category-list\">\n        <div\n          v-for=\"category in categories\"\n          :key=\"category.id\"\n          class=\"category-item\"\n        >\n          <h3>{{ category.name }}</h3>\n          <div v-if=\"category.products.length\" class=\"product-list-wrapper\">\n            <button\n              class=\"carousel-button prev\"\n              @click=\"prevProduct(category.id)\"\n            >\n              <i class=\"bi bi-arrow-left-circle-fill\"></i>\n            </button>\n            <div\n              class=\"product-list\"\n              \n            >\n              <div\n                v-for=\"product in category.products\"\n                :key=\"product.id\"\n                :style=\"{\n                transform: `translateX(-${\n                  getProductIndex(category.id) * 250\n                }px)`,\n              }\"\n                class=\"product-item\"\n              >\n                <p>\n                  <strong>Name: {{ product.name }}</strong>\n                </p>\n                <p><strong>Price:</strong> {{ product.price }}</p>\n                <button\n                  @click=\"requireLogin\"\n                  class=\"btn-add-cart\"\n                  :disabled=\"!product.stock\"\n                >\n                  Add to Cart\n                </button>\n                <button\n                  @click=\"requireLogin\"\n                  class=\"btn-buy\"\n                  :disabled=\"!product.stock\"\n                >\n                  Buy Now\n                </button>\n              </div>\n            </div>\n            <button\n              class=\"carousel-button next\"\n              @click=\"nextProduct(category.id)\"\n            >\n              <i class=\"bi bi-arrow-right-circle-fill\"></i>\n            </button>\n          </div>\n\n          <p v-else>No products available in this category.</p>\n        </div>\n      </div>\n      <p v-else>No categories available.</p>\n    </div>\n\n    <!-- Login Modal -->\n    <div v-if=\"showLoginOptions\" class=\"login-modal\">\n      <div class=\"modal-content\" v-if=\"!selectedRole\">\n        <h3>Select Your Role</h3>\n        <button class=\"role-button\" @click=\"selectRole('admin')\">Admin</button>\n        <button class=\"role-button\" @click=\"selectRole('manager')\">\n          Manager\n        </button>\n        <button class=\"role-button\" @click=\"selectRole('user')\">User</button>\n        <button class=\"close-button\" @click=\"showLoginOptions = false\">\n          Close\n        </button>\n      </div>\n      <div class=\"modal-content\" v-else>\n        <h3>Role: {{ capitalize(selectedRole) }}</h3>\n        <p>What would you like to do?</p>\n        <button\n          class=\"role-button\"\n          @click=\"navigateTo(`${selectedRole}_login`)\"\n        >\n          Login\n        </button>\n        <button\n          v-if=\"selectedRole !== 'admin'\"\n          class=\"role-button\"\n          @click=\"navigateTo(`${selectedRole}_signup`)\"\n        >\n          Sign Up\n        </button>\n        <button class=\"close-button\" @click=\"resetSelection\">Back</button>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: \"WelCome\",\n  data() {\n    return {\n      categories: [],\n      showLoginOptions: false,\n      selectedRole: null,\n      carouselIndex: 0,\n      productIndices: {},\n      images: [\n        \"biscuits.jpeg\",\n        \"sliderr2.png\",\n        \"grain lowest.jpeg\",\n        \"vegetable -2.jpg\",\n      ],\n    };\n  },\n  async mounted() {\n    try {\n      const response = await fetch(\"http://localhost:5000/api/welcomePage\");\n      if (!response.ok) {\n        throw new Error(`HTTP error! status: ${response.status}`);\n      }\n      this.categories = await response.json();\n    } catch (error) {\n      console.error(\"Error fetching welcome page data:\", error);\n    }\n\n    this.carouselInterval = setInterval(this.nextImage, 3000);\n  },\n  beforeUnmount() {\n    clearInterval(this.carouselInterval);\n  },\n  methods: {\n    getProductIndex(categoryId) {\n      return this.productIndices[categoryId] || 0;\n    },\n    nextProduct(categoryId) {\n      const category = this.categories.find((cat) => cat.id === categoryId);\n      if (!category) return;\n\n      const maxIndex = Math.max(0, category.products.length - 1);\n      this.productIndices[categoryId] = Math.min(\n        this.getProductIndex(categoryId) + 1,\n        maxIndex\n      );\n    },\n    prevProduct(categoryId) {\n      this.productIndices[categoryId] = Math.max(\n        this.getProductIndex(categoryId) - 1,\n        0\n      );\n    },\n    selectRole(role) {\n      this.selectedRole = role;\n    },\n    navigateTo(path) {\n      this.showLoginOptions = false;\n      this.selectedRole = null;\n      this.$router.push(`/${path}`);\n    },\n    resetSelection() {\n      this.selectedRole = null;\n    },\n    capitalize(word) {\n      return word.charAt(0).toUpperCase() + word.slice(1);\n    },\n    nextImage() {\n      this.carouselIndex = (this.carouselIndex + 1) % this.images.length;\n    },\n    prevImage() {\n      this.carouselIndex =\n        (this.carouselIndex - 1 + this.images.length) % this.images.length;\n    },\n    requireLogin() {\n      this.showLoginOptions = true;\n    },\n    closeModal() {\n      this.showLoginOptions = false;\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* General Styles */\nbody {\n  font-family: Arial, sans-serif;\n  margin: 0;\n  padding: 0;\n}\n\n/* Navbar Styles */\n.navbar {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  background-color: #28a745;\n  color: white;\n  padding: 10px 20px;\n}\n\n.app-title {\n  margin: 0;\n  font-size: 24px;\n}\n\n.login-button {\n  background-color: white;\n  color: #28a745;\n  border: none;\n  padding: 10px 15px;\n  border-radius: 5px;\n  cursor: pointer;\n  transition: background-color 0.3s ease;\n}\